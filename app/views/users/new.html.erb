<% provide(:title, 'Cadastro') %>
<h1>Cadastre-se!</h1>
<div class="row">
  <!-- <div class="col-md-6 col-md-offset-3"> -->
    <%= form_for(@user) do |f| %>
      <div class="col-md-3">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="col-md-3">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="col-md-3">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="col-md-3">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  <!-- </div> -->
</div>
