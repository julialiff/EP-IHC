<% provide(:title, 'Cadastro') %>
<h1>Cadastre-se!</h1>
<h6 style="color: #F00">*Por enquanto disponível apenas para residentes em São Paulo</h6>
<h6 style="color: #F00">*Campos com asterisco são de preenchimento obrigatório</h6>
<div class="row">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <!-- <div class="col-md-6"> -->
      <div class="col-md-6">
        <%= f.label t(:name)+'*' %><br />
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:email)+'*' %><br />
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:cellphone)+'*' %><br />
        <%= f.text_field :cellphone, class: 'form-control', :data => {:mask => '(99) 99999-9999'} %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:birthdate)+'*' %><br />
        <%= f.text_field :birthdate, class: 'form-control', :data => {:mask => '99/99/9999'} %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:occupation)+'*' %><br />
        <%= f.text_field :occupation, class: 'form-control' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:college)+'*' %><br />
        <%= f.text_field :college, class: 'form-control' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:state) %><br />
        <%= f.text_field :state, class: 'form-control', :readonly => true, :value => 'SP' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:city) %><br />
        <%= f.text_field :city, class: 'form-control', :readonly => true, :value => 'São Paulo' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:neighbourhood)+'*' %><br />
        <%= f.text_field :neighbourhood, class: 'form-control' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:password)+'*' %><br />
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="col-md-6">
        <%= f.label t(:password_confirmation)+'*' %><br />
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    <!-- </div> -->

      <div class="col-md-12">
        <%= f.submit "Crie minha conta", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>
