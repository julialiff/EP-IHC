<% provide(:title, 'Cadastro') %>
<h1>Cadastre-se!</h1>
<h6 style="color: #F00">*Por enquanto disponível apenas para baladas em São Paulo</h6>
<div class="row">
    <%= form_for(@night_house) do |f| %>
    <%= render 'shared/error_messages_night_house' %>
    <!-- <div class="col-md-6"> -->
      <div class="col-md-6">
        <%= f.label :name, t(:name) %><br />
        <%= f.text_field :name, class: 'form-control', :required => true %>
      </div>

      <div class="col-md-6">
        <%= f.label :email, t(:email) %><br />
        <%= f.email_field :email, class: 'form-control', :required => true %>
      </div>

      <div class="col-md-6">
        <%= f.label :cnpj, t(:cnpj) %><br />
        <%= f.text_field :cnpj, class: 'form-control', :data => {:mask => '99.999.999/9999-99'}, :required => true %>
      </div>

      <div class="col-md-6">
        <%= f.label :category, t(:category) %><br />
        <%= f.text_field :category, class: 'form-control', :required => true %>
      </div>


      <div class="col-md-6">
        <%= f.label :state, t(:state) %><br />
        <%= f.text_field :state, class: 'form-control', :readonly => true, :value => 'SP' %>
      </div>

      <div class="col-md-6">
        <%= f.label :city, t(:city) %><br />
        <%= f.text_field :city, class: 'form-control', :readonly => true, :value => 'São Paulo'%>
      </div>

      <div class="col-md-6">
        <%= f.label :neighbourhood, t(:neighbourhood) %><br />
        <%= f.text_field :neighbourhood, class: 'form-control', :required => true %>
      </div>

      <div class="col-md-6">
        <%= f.label :address, t(:address) %><br />
        <%= f.text_field :address, class: 'form-control', :required => true %>
      </div>

      <div class="col-md-6">
        <%= f.label :password, t(:password) %><br />
        <%= f.password_field :password, class: 'form-control', :required => true %>
      </div>

      <div class="col-md-6">
        <%= f.label :password_confirmation, t(:password_confirmation) %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', :required => true %>
      </div>
    <!-- </div> -->

      <div class="col-md-12">
        <%= f.submit "Crie minha conta!", class: "btn btn-primary" %>
      </div>
    <% end %>
</div>
